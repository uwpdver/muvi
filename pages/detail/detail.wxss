
.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 100%;
}

text {
  color: #1a2b3c;
}

.banner {
  /* width: 750rpx; */
  position: relative;
  white-space: nowrap;
  height: 375rpx;
}

.banner::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 87%;
  z-index: 1;
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0) 0%,rgba(0, 0, 0, 0.7) 100%);
}

swiper {
  height: 321rpx;
}

swiper-item {
  text-align: center;
}

.banner-image {
  width: 550rpx;
  height: 100%;
}

.banner-image:not(:last-child) {
  margin-right: 30rpx;
}

.body {
  padding: 32rpx;
}
