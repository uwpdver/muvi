.search-page .search-bar {
  position: sticky;
  top: 0;
  z-index: 10;
}

.result-item {
  display: flex;
  padding: 24rpx;
}

.result-item:not(:last-child) {
  margin-bottom: 24rpx;
  border-bottom: 1px solid #e3e3e3;
}

.result-item-left {
  flex: 0 0 250rpx;
  margin-right: 16rpx;
  height: 175rpx;
  background-color: #07c160;
}

.result-item-right {
  flex: 1;
}

.result-item-title {
  border-bottom: 12rpx;
}

.result-item-info {
  font-size: 0.8em;
}
